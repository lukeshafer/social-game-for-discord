---
import "../../../app.postcss";
import "@/styles/base.css";
import woodTile from "@/assets/sprites/wood.svg";
import grassTile from "@/assets/sprites/grass-tile.svg";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body
		style={{
			"--wood-tile": `url(${woodTile})`,
			"--grass-tile": `url(${grassTile})`,
		}}
	>
		<noscript>
			<aside>
				<p><strong>Heads up!</strong></p>
				<p>
					We've noticed your browser does not have JavaScript enabled!
					While we're currently making an effort to function without
					JavaScript, the functionality is incomplete. If you can, we
					recommend enabling JavaScript in your browser for the best
					experience!
				</p>
			</aside>
		</noscript>
		<slot />
	</body>
	<script>
		document.body.classList.add("js");
	</script>
</html>
